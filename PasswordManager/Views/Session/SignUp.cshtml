@model SignUpViewModel
@{
    Layout = null;
}
<head>
    <base href="../../../">
    <title>AKINSOFT - Password Manager</title>
    <meta charset="utf-8" />

    <link rel="shortcut icon" href="~/akinsoft.ico" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />

    <link href="~/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/style.bundle.css" rel="stylesheet" type="text/css" />

</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="bg-body">
    <!--begin::Main-->
    <!--begin::Root-->
    <div class="d-flex flex-column flex-root">
        <!--begin::Authentication - Sign-up -->
        <div class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed" style="background-image: url(assets/media/illustrations/unitedpalms-1/14.png)">
            <!--begin::Content-->
            <div class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20">
                <!--begin::Logo-->
                <a href="https://www.akinsoft.com.tr/" class="mb-12">
                    <img alt="Logo" src="~/assets/media/akinsoftlandscape.png" class="h-60px" />
                </a>
                <!--end::Logo-->
                <!--begin::Wrapper-->
                <div class="w-lg-600px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
                    <!--begin::Form-->
                    <form class="form w-100" method="post" autocomplete="off" asp-controller="Session" asp-action="SignUp">
                        <!--begin::Heading-->
                        <div class="mb-10 text-center">
                            <!--begin::Title-->
                            <h1 class="text-dark mb-3">Yeni Hesap Oluştur</h1>
                            <!--end::Title-->
                            <!--begin::Link-->
                            <div class="text-gray-400 fw-bold fs-4">
                                Zaten Bir Hesabın Var Mı?
                                <a href="~/Session/SignIn" class="link-primary fw-bolder">Giriş Yap</a>
                            </div>
                            <!--end::Link-->
                        </div>
                        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
                        </div>
                        <!--end::Heading-->
                        <!--begin::Input group-->
                        <div class="fv-row mb-7">
                            <label asp-for="UserName" class="form-label fw-bolder text-dark fs-6">Kullanıcı Adı</label>
                            <input class="form-control form-control-lg form-control-solid" type="text" asp-for="UserName" autocomplete="off" />
                            <span asp-validation-for="UserName" class="text-danger fw-bold"></span>
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="fv-row mb-7">
                            <label asp-for="Email" class="form-label fw-bolder text-dark fs-6">E-Posta Adresi</label>
                            <input class="form-control form-control-lg form-control-solid" type="email" asp-for="Email" autocomplete="off" />
                            <span asp-validation-for="Email" class="text-danger fw-bold"></span>
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="fv-row mb-7">
                            <label asp-for="PhoneNumber" class="form-label fw-bolder text-dark fs-6">Telefon Numarası</label>
                            <input class="form-control form-control-lg form-control-solid" type="text" maxlength="10" asp-for="PhoneNumber" autocomplete="off" />
                            <span asp-validation-for="PhoneNumber" class="text-danger fw-bold"></span>
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="mb-10 fv-row" data-kt-password-meter="true">
                            <!--begin::Wrapper-->
                            <div class="mb-1">
                                <!--begin::Label-->
                                <label asp-for="Password" class="form-label fw-bolder text-dark fs-6">Şifre</label>
                                <!--end::Label-->
                                <!--begin::Input wrapper-->
                                <div class="position-relative mb-3">
                                    <input class="form-control form-control-lg form-control-solid" type="password" asp-for="Password" autocomplete="off" />
                                    <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
                                        <i class="bi bi-eye-slash fs-2"></i>
                                        <i class="bi bi-eye fs-2 d-none"></i>
                                    </span>
                                    <span asp-validation-for="Password" class="text-danger fw-bold"></span>
                                </div>
                                <!--end::Input wrapper-->
                            </div>
                            <!--end::Wrapper-->
                        </div>
                        <!--end::Input group=-->
                        <!--begin::Input group-->
                        <div class="fv-row mb-5">
                            <label asp-for="PasswordConfirm" class="form-label fw-bolder text-dark fs-6">Şifre Onay</label>
                            <input class="form-control form-control-lg form-control-solid" type="password" asp-for="PasswordConfirm" autocomplete="off" />
                            <span asp-validation-for="PasswordConfirm" class="text-danger fw-bold"></span>
                        </div>
                        <!--end::Input group-->
                        <!--begin::Actions-->
                        <div class="text-center">
                            <button type="submit" class="btn btn-lg btn-primary">
                                Kayıt Ol
                            </button>
                        </div>
                        <!--end::Actions-->
                    </form>
                    <!--end::Form-->
                </div>
                <!--end::Wrapper-->
            </div>
            <!--end::Content-->
        </div>
        <!--end::Authentication - Sign-up-->
    </div>

    <script>var hostUrl = "assets/";</script>
    <script src="assets/plugins/global/plugins.bundle.js"></script>
    <script src="assets/js/scripts.bundle.js"></script>
    <script>
        window.onload = function () {

            var inputs = document.querySelectorAll('input');

            for (var i = 0; i < inputs.length; i++) {
                if (inputs[i].id == "PhoneNumber") {
                    inputs[i].addEventListener("keypress", function (evt) {
                        var charCode = (evt.which) ? evt.which : evt.keyCode;
                        if ((charCode < 48 || charCode > 57) && charCode != 44) {
                            evt.preventDefault();
                        }
                    });
                }
            }
        }
    </script>
</body>
